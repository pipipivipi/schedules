<div class="container">
  <div class="form-container">
    <%= form_with model: @schedule do |f| %>

    <table class="table table-hover">
      <tr>
        <h3>予定詳細</h3>
      </tr>
      <tr>
        <th>タイトル</th>
        <td><%= @schedule.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @schedule.startdate.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @schedule.enddate.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @schedule.all_day ? '○' : '' %></td>
      </tr>
      <tr>
        <th>メモ</th>
        <td><%= @schedule.memo %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= link_to "編集", [:edit, @schedule], class: 'btn btn-outline-dark rounded-0' %></li>
        <li><%= link_to "一覧に戻る", :schedules, class: 'btn btn-outline-dark rounded-0' %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>